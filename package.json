    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "flow-bin": "0.66.0",
    "jest": "22.4.2",
    "jest-localstorage-mock": "2.2.0",
    "lint-staged": "7.0.0",
    "prettier": "1.10.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-test-renderer": "16.2.0",
    "webpack": "4.0.0",
    "webpack-cli": "^2.0.9"
  },
